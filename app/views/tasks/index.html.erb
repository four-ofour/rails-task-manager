<h1>Hello</h1>
<div class="container">
  <div class="card">
        <% @tasks.each do |task| %>
        <%= link_to task.title, task_path(task) %>
        <% if task.completed %>
          <i class="far fa-check-square"></i>
        <% else %>
          <i class="far fa-square"></i>
        <% end %>

        <% end %>
      </div>

      <%= link_to "new task", new_task_path %>
</div>
